{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DB": "Server=.\\SQLEXPRESS;Database=BankReporting;User Id=me;Password=pass.123;MultipleActiveResultSets=true;Application Name=BankReportingWeb;Max Pool Size=750;Encrypt=False;"
  },

  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:26502"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Your ASP.NET Core App"
    }
  },

  "CfgLib": {
    // General database command timeout for EF
    "DbCmdTimeout": 360,
    // EF Batch size
    "EFBatchSize": 500
  }
}
